# GENOCLAIM - https://genoclaim.rtfd.io - OTP-CR-117_19 - otp.informationdesk@icc-cpi.int

if [ "$(id -u)" -ne 0 ]; then
    echo "you need root permissions" && exit 1
fi
[ ! -d "/var/log/genoclaim" ] && mkdir /var/log/genoclaim
[ ! -d "/var/lib/genoclaim" ] && mkdir /var/lib/genoclaim
touch /var/log/genoclaim/genoclaim.log
cat > /etc/systemd/system/genoclaim.service <<-EOM
[Unit]
Description=genoclaim

[Service]
ExecStart=/usr/local/bin/genoclaimd
After=network-online.target
Wants=network-online.target

[Install]
WantedBy=multi-user.target
EOM
python3 setup.py install
systemctl enable genoclaim
systemctl daemon-reload
service genoclaim stop
service genoclaim start
systemctl status genoclaim --no-pager
