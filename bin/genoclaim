#!/usr/bin/python3
# GENOCLAIM - using the law to administer poison, the king commits genocide
#
#

import os, sys ; sys.path.insert(0, os.getcwd())
import ol

from genoclaim.irc import IRC

def main():
    k = ol.krn.boot("genoclaim")
    k.walk("omod")
    k.walk("genoclaim")
    k.scandir(k.cfg.md or os.getcwd())
    if k.cfg.txt:
        return k.cmd(k.cfg.origtxt)
    k.start()
    k.init("stats,rss")
    if k.cfg.mods:
        k.init(k.cfg.mods)
    i = IRC()
    i.start()
    if not "n" in k.cfg.opts:
        c = ol.csl.Console()
        c.start()
    k.wait()

ol.trm.execute(main)
os._exit(0)
