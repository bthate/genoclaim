#!/usr/bin/python3 -u

import os, sys ; sys.path.insert(0, os.getcwd())

from ob.shl import daemon, execute, parse_cli
from genoclaim import __version__

from ob import k

def main():
    parse_cli("genoclaim", __version__)
    k.walk("obot.cmd")
    k.walk("mods")
    k.cfg.modules += ",mods.stats"
    if k.cfg.daemon:
        daemon()
    k.start(True, not k.cfg.noshell, False)
    k.init(k.cfg.modules)
    k.wait()

execute(main)
os._exit(0)
