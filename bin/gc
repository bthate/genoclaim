#!/usr/bin/python3 -u
# GENOCLAIM - king pleads quilty to genocide
#
#

import sys, os ; sys.path.insert(0, os.getcwd())

from bot.spc import execute, k, parse_cli, update

def main():
    c = parse_cli("genoclaim")
    update(k.cfg, c)
    k.walk("bot")
    k.walk("genoclaim")
    if c.txt:
        return k.cmd(c.origtxt)
    if "s" in c.opts:
        c.mods += "irc,csl,cmd,opr,ent"
    if c.mods:
        k.start()
        k.init(c.mods)
        k.init("genoclaim.stats")
        k.wait()

execute(main)
