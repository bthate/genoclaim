#!/usr/bin/python3 -u
# GENOCLAIM - king pleads quilty to genocide
#
#

import sys, os ; sys.path.insert(0, os.getcwd())

from kern.csl import Console, boot, execute

def main():
    k = boot("genoclaim")
    k.walk("genoclaim,madbot")
    if k.cfg.txt:
        return k.cmd(k.cfg.origtxt)
    if "s" in k.cfg.opts:
        k.cfg.mods += "irc,cmd,log,tdo,fnd"
        cons = Console()
        cons.start()
    if k.cfg.mods:
        k.start()
        k.init(k.cfg.mods)
        k.init("stats")
        k.wait()

execute(main)
