#!/usr/bin/python3
# MADBOT - 24/7 channel daemon.
#
#

import os
import sys
import time
import unittest

sys.path.insert(0, os.getcwd())

from kern.obj import Object, cdir
from kern.csl import boot, execute, parse

import madbot.rss

def main():
    madbot.rss.debug = True
    for line in os.popen("rm -fR ~/.test").readlines():
        print(line)
    k = boot("test", os.path.expanduser("~/.test"))
    k.walk("madbot,mods")
    k.start()
    test_path = os.getcwd() + os.sep + "tests"
    if k.cfg.txt:
        pat = "test_%s*" % k.cfg.txt
    else:
        pat = "test*"
    suite = unittest.loader.TestLoader().discover(test_path, pattern=pat)
    unittest.TextTestRunner(verbosity=3).run(suite)
    #k.wait()
   
execute(main)
os._exit(0)
